<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE struts PUBLIC "-//ApacheSoftwareFoundation//DTDStrutsConfiguration2.0//EN"
"http://struts.apache.org/dtds/struts-2.0.dtd">
<struts> 

<package name="struts2" namespace="/"  extends="struts-default"> 
<interceptors>
<interceptor name="loginCheck" class="interceptor.LoginCheck"></interceptor>
</interceptors>

<action name="showUser" class="action.UserAction" method="showUserByID"> 
<interceptor-ref name="loginCheck"/>
 <interceptor-ref name="defaultStack"/>
 <result name="login" type="redirectAction">showTopInfo</result>
<result name="success">/userInfo.jsp</result>
</action>

</package>
</struts> 
